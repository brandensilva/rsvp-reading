{
  "name": "@rsvp/desktop",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "RSVP Reader - Speed reading desktop application",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "electron-vite build && electron-builder --mac",
    "dist:dir": "electron-vite build && electron-builder --mac --dir"
  },
  "dependencies": {
    "@rsvp/core": "workspace:*",
    "electron": "^39.2.7"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "svelte": "^5.43.8",
    "vite": "^7.2.4",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "build": {
    "appId": "com.rsvp.reader",
    "productName": "RSVP Reader",
    "mac": {
      "category": "public.app-category.education",
      "icon": "resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true
    },
    "dmg": {
      "title": "RSVP Reader",
      "icon": "resources/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "role": "Viewer"
      },
      {
        "ext": "epub",
        "name": "EPUB Document",
        "role": "Viewer"
      }
    ]
  }
}
